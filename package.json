{
  "name": "ptax-automation-desktop-app",
  "author": "Frank Edwards",
  "version": "0.3.9",
  "description": "Ptax Automation App",
  "main": "./public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@formkit/auto-animate": "^1.0.0-beta.3",
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/react-fontawesome": "^0.1.17",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.1.3",
    "browserify": "^17.0.0",
    "capture-website": "^2.4.0",
    "colors": "^1.4.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron-common-ipc": "^15.1.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.3.0",
    "find-object-paths": "^1.0.2",
    "html-pdf-chrome": "^0.8.1",
    "nanoid": "^4.0.0",
    "path": "^0.12.7",
    "portfinder": "^1.0.32",
    "prompt-sync": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.2",
    "react-scripts": "5.0.0",
    "react-timer-hook": "^3.0.5",
    "react-toastify": "^9.1.1",
    "reactstrap": "^9.0.1",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "request": "^2.88.2",
    "selenium-webdriver": "^4.2.0",
    "url": "^0.11.0",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^21.2.2",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.2",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.15"
  },
  "scripts": {
    "app": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "prestart": "browserify -o ./public/preload.bundle.js -x electron ./preload.js",
    "start": "cross-env GENERATE_SOURCEMAP=false && set ELECTRON_ENABLE_LOGGING=true",
    "poststart": "react-scripts start",
    "build": "react-scripts build && electron-builder -p always",
    "electron:package:win": "npm run build && electron-builder -p -always",
    "test": "react-scripts test",
    "build-css": "node-sass ./src/sass_css/ -o ./src/css/vanilla_css/",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "257781",
    "productName": "ptax-automation-desktop-app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 electron version",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
